{
  "name": "tchat",
  "version": "0.0.0",
  "description": "Web app scaffold with React/Node/Typescript/Webpack",
  "main": "app/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsears/tchat.git"
  },
  "scripts": {
    "build": "webpack",
    "build-front": "webpack && docker build -f Dockerfile.front . -t tsears/tchat-front",
    "build-back": "docker build -f Dockerfile.back . -t tsears/tchat-back",
    "lint": "eslint ./",
    "run-docker-back": "docker run --name tchat-back --network dockernet --rm -p 8081:8081 tsears/tchat-back",
    "run-docker-front": "docker run --name tchat-front --network dockernet --env APP_SHORTNAME=reactscaffold --env APP_API_URL=http://tchat-back:8081 --rm -p 9000:80 tsears/tchat-front",
    "run-front": "webpack-dev-server",
    "run-back": "nodemon server/index.js --config nodemon.config.json",
    "start": "DEV=true rm -fR app/node_modules/.cache && npm-run-all --parallel run-front run-back",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Tom Sears",
  "license": "MIT",
  "dependencies": {
    "express": "^4.16.4",
    "nodemon": "^1.18.10"
  },
  "devDependencies": {
    "@types/react": "^16.8.5",
    "@types/react-dom": "^16.8.2",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "awesome-typescript-loader": "^5.2.1",
    "clean-webpack-plugin": "^1.0.1",
    "css-loader": "^2.1.0",
    "dts-css-modules-loader": "^1.0.1",
    "eslint": "^5.14.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-disable": "^1.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jasmine": "^2.10.1",
    "eslint-plugin-max-len-2": "0.0.5",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^3.0.1",
    "force-case-sensitivity-webpack-plugin": "^0.2.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "typescript": "^3.3.3333",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1"
  }
}
